<Page x:Class="OAuthVK.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OAuthVK"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <DockPanel>
                <TextBlock FontSize="85" Foreground="AliceBlue" VerticalAlignment="Center" HorizontalAlignment="Center">Добро пожаловать!</TextBlock>
            </DockPanel>
            <DockPanel>
                <TextBlock FontSize="35" Foreground="AliceBlue" VerticalAlignment="Center" HorizontalAlignment="Center">Для авторизации нажмите на кнопку снизу.</TextBlock>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
